{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/verify",
      "destination": "/api/auth/verify"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}